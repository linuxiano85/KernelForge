{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "KernelForge",
  "version": "0.1.0",
  "identifier": "io.github.kernelforge",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "resources": [],
    "license": "",
    "copyright": "",
    "category": "Utility",
    "shortDescription": "Linux kernel optimizer for gaming performance",
    "longDescription": "KernelForge is the ultimate Linux kernel optimizer focused on maximizing gaming performance by removing bloat and applying performance patches.",
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0"
        ],
        "desktopTemplate": "Bundle.desktop"
      },
      "rpm": {
        "depends": [
          "webkit2gtk4.1",
          "gtk3"
        ],
        "desktopTemplate": "Bundle.desktop"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "KernelForge",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
